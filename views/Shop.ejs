<% include partials/head %>

<script src="/scripts/shop/infiniteShops.js"></script>
<script src="/scripts/cart.js"></script>
    <div class="container container-single">
        <div id="container-shop">
            <h1 class="single-title text-center mt-2 p-2" style="color: var(--light-shade)">Toile Originale</h1>
            <div id="original" class="tab container-shop">
              <% if (locals.original){ %>
                <% Object.keys(locals.original).forEach(function (index) { %>
                  <div class="card" id="<%= locals.original[index]._id %>">
                    <a class="card-img-expand" href="/Shop/<%= locals.original[index]._id %>"><img src="/api/image/<%= locals.original[index].mainImgId %>" class="card-img-top" alt="<%= locals.original[index].title %>"></a class="card-img-expand">
                    <div class="card-body">
                      <h5 class="card-title"><i><a href="/Shop/<%= locals.original[index]._id %>"><%= locals.original[index].shorttitle %>...</a></i></h5>
                      <p class="card-text gallery-description mb-5"><%= locals.original[index].shortcontent %>...</p>
                      <div class="row shop-price-row mt-4">
                        <div class="shop-price-col col-6">
                          <b class="card-price"><%= locals.original[index].price %>â‚¬</b>
                            <b class="isUnique">Toile unique</b>
                        </div>
                     
                        <div class="col-6">
                          <input type="submit" class="logbtn" value="Ajouter au panier" onclick="cartAdd('<%= locals.original[index]._id %>', this)">
                        </div>
                      </div>
                    </div>
                  </div>
                <% }) %>
              <% } else { %>
                <h1 class="alertEmpty">Plus de toiles originales en stock!</h1>
              <% } %>
          </div>
           <div class="col-6 offset-3 mt-5">
            <img id="loader" src="/img/loader.gif">
            <input id="infinitebtn" type="submit" class="logbtn" value="Load more" onclick="infiniteShopItems();">
          </div>
          </div>
         
      </div>
      
    </div>

<a class="lightbox-close" href="#close">
  <div class="lightbox-target" id="expand">
    <% if(locals.original[0]) { %>
      <img id="expandImg" src="/api/image/<%= locals.original[0].mainImgId %>"/>
    <% } %>
  </div>
</a>

<% include partials/footer %>