<% include ../partials/head %>

<script src="/scripts/bootstrap-tagsinput.js"></script>

<div class="container-fluid"> 
    <form id="gallery-form" method="POST" action="/api/gallery/post" class="login-form blog-form col-6 offset-3" enctype="multipart/form-data" onsubmit="trigger(event);">
        <h1 class="form-title">Ajouter un item Ã  la gallerie</h1>
            
        <div class="txtb">
            <input type="text" name="title" id="title" required>
            <span data-placeholder="Title"></span>
        </div>

        <textarea class="blog-textarea" id="content" name="content" placeholder="Item description.." required></textarea>
       
        <div class="form-group">
            <input type="file" name="img" id="img">
        </div>

        <div class="form-group">
                <input v-bind="selectedTags" type="text" value="" data-role="tagsinput" id="tagInput" class="form-control">
                <span data-placeholder="Tags"></span>
        </div>

        <input type="submit" class="logbtn" value="Sauvegarder" id="submit-gallery">
    </form>
    
    <script>
    async function trigger(e) {
        e.preventDefault();
        let tagInput = document.getElementsByClassName("label-info"),
            title = $("#title").val(),
            content = $("#content").val(),
            img = document.querySelector('#img'),
            formData = new FormData(),
            tags = [];
        
        for (i = 0; i < tagInput.length; i++)
            tags.push(tagInput[i].textContent);

        formData.append('img', img.files[0]);
        formData.append('title', title);
        formData.append('content', content);
        formData.append('tags', JSON.stringify(tags));
        
        const response = await fetch('/api/gallery/post', {
            method: 'post',
            mode: 'same-origin',
            body: formData
        })
        window.location.href = "/Galerie";
    }
    </script>
    <script src="/scripts/formFocus.js"></script>
</div>
  
