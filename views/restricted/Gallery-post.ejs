<% include ../partials/head %>

<script src="/scripts/core/bootstrap-tagsinput.js"></script>
<div class="container container-single">
	<div class="single-wrapper">
		<div class="col-md-10 offset-md-1 wrapper">
			<h1 class="single-title text-center">Ajouter une image Ã  la galerie</h1>
			<form id="gallery" method="POST" action="/api/gallery/post" data-postgal="true" enctype="multipart/form-data">
				<hr />
				<div class="form-group">
					<label class="control-label">Titre</label>
					<input type="text" name="title" id="title" placeholder="Titre" onkeyup="Validate.String(this, 1, 256);" required />
					<span id="i_title" class="form-info">Title must contain between 1 and 256 characters</span>
				</div>

				<div class="form-group">
					<label class="control-label">Description</label>
					<textarea rows="5" id="content" name="content" placeholder="Description de l'oeuvre.." onkeyup="Validate.String(this, 1, 2048);" required></textarea>
					<span id="i_content" class="form-info">Content must contain between 1 and 2048 characters</span>
				</div>

				<div class="form-group">
					<label class="control-label">Tags</label>
					<input v-bind="selectedTags" type="text" value="" data-role="tagsinput" id="tagInput" />
					<span data-placeholder="Tags"></span>
				</div>

				<div class="form-group text-center">
					<label for="img" id="imglabel" class="filebtn">Choisir des images</label>
					<input class="inputfile" type="file" name="img" id="img" multiple required />
				</div>

				<input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
				<input type="submit" class="logbtn" value="Valider" id="submit-gallery" />
			</form>
		</div>
	</div>
</div>

<script src="/scripts/gallery/galleryScripts.js" defer></script>
<script src="/scripts/core/frontValidation.js"></script>
<% include ../partials/footer %>
