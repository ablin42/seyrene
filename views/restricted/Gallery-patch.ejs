<% include ../partials/head %>

<script src="/scripts/bootstrap-tagsinput.js"></script>

<div class="container-fluid">
    <div class="login-form blog-form col-6 offset-3">
        <form id="blog-form" method="POST" action="/api/gallery/patch/<%= locals._id %>" enctype="multipart/form-data" onsubmit="trigger(event);"> 
            <h1 class="form-title">Editer un item de la gallerie</h1>
            <div class="txtb">
                <input type="text" name="title" id="title" value="<%= locals.title %>" required>
                <span data-placeholder="Titre"></span>
            </div>
            <textarea id="content" name="content" class="blog-textarea" placeholder="Your blog content here" required><%= locals.content %></textarea>

            <div class="form-group">
                <img src="/api/gallery/image/<%= locals._id %>"/>
                <input type="file" name="img" id="img">
            </div>
        
            <div class="form-group">
                <input v-bind="selectedTags" type="text" value="" data-role="tagsinput" id="tagInput" class="form-control">
                <span data-placeholder="Tags"></span>
            </div>

            <input type="submit" class="logbtn" value="Modifier" id="patch-blog">
        </form>
    <hr />
    <form method="GET" action="/api/gallery/delete/<%= locals._id %>">
        <input type="submit" class="delbtn" value="SUPPRIMER" id="delete-blog">
    </form>
</div>
<script>
        let tagInput = $("#tagInput");
        let tags = "<%= locals.tags %>";
        tags = tags.split(',')

        tagInput.tagsinput('add', "");

        // Load tags from db and put them in the input field
        for (i = 0; i < tags.length; i++)
            tagInput.tagsinput('add', tags[i]);
       
        async function trigger(e) {
            e.preventDefault();
            let tagInput = document.getElementsByClassName("label-info"),
                title = $("#title").val(),
                content = $("#content").val(),
                img = document.querySelector('#img'),
                formData = new FormData(),
                tags = [];
            
            for (i = 0; i < tagInput.length; i++)
                tags.push(tagInput[i].textContent);
    
            formData.append('img', img.files[0]);
            formData.append('title', title);
            formData.append('content', content);
            formData.append('tags', JSON.stringify(tags));
            
            const response = await fetch('/api/gallery/patch/<%= locals._id %>', {
                method: 'post',
                mode: 'same-origin',
                body: formData
            })
            window.location.href = "/Galerie";
        }
        </script>
    <script src="/scripts/formFocus.js"></script>
</div>
  
<% include ../partials/footer %>