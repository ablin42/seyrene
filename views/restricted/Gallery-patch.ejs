<% include ../partials/head %>

<script src="/scripts/bootstrap-tagsinput.js"></script>

<div class="container container-single"> 
    <div class="single-wrapper col-8 offset-2">
        <h1 class="single-title">Modifier un item de la galerie</h1>
        <form class="col-8 offset-2" id="gallery" method="POST" action="/api/gallery/patch/<%= locals.gallery._id %>" enctype="multipart/form-data" onsubmit="patchGallery(event, '<%= locals.gallery._id %>');"> 
            <hr />
            <div class="form-group">
                <label class="control-label">Titre</label>
                <input class="form-control" type="text" name="title" id="title" placeholder="Titre" value="<%= locals.gallery.title %>" onkeyup="Validate.String(this, 1, 256);" required>
                <span id="i_title" class="form-info">Title must contain between 1 and 256 characters</span>
            </div>

            <div class="form-group">
                <label class="control-label">Description</label>
                <textarea class="instructions-textarea" id="content" name="content" placeholder="Description de l'oeuvre.." onkeyup="Validate.String(this, 1, 2048);" required><%= locals.gallery.content %></textarea>
                <span id="i_content" class="form-info">Content must contain between 1 and 2048 characters</span>  
            </div>

            <div class="form-group">
                <div class="form-group text-center">
                    <label for="img" id="imglabel" class="filebtn">Choisir des images</label>
                    <input class="inputfile" type="file" name="img" id="img" onchange="readURL(this)" multiple>
                </div>
                <% if (locals.img) { %>
                    <% locals.img.forEach(function (item) { %>
                        <img class="w-100" id="<%= item._id %>" src="http://localhost:8089/api/image/<%= item._id %>">
                            <div id="actDiv<%= item._id %>" class="action-div" <% if (item.isMain === true) { %>style="display:none"<% } %>>
                                <a id="del<%= item._id %>" onclick="deleteImage(event, this);" href="http://localhost:8089/api/image/delete/<%= item._id %>"><i class="fas fa-trash-alt"></i></a>
                                <a id="sel<%= item._id %>" onclick="setMain(event, this);" href="http://localhost:8089/api/image/select/Gallery/<%= locals.gallery._id %>/<%= item._id %>"><i class="fas fa-star"></i></a>
                            </div>
                    <% }) %>
                <% } %>
            </div>
            
            <div class="form-group">
                <label class="control-label">Tags</label>
                <input v-bind="selectedTags" type="text" value="" data-role="tagsinput" id="tagInput" class="form-control">
                <span data-placeholder="Tags"></span>
            </div>

            <input type="submit" class="logbtn" value="Mettre Ã  jour" id="submit-gallery">
        </form>
        <form class="col-8 offset-2 mt-4" method="GET" action="/api/gallery/delete/<%= locals.gallery._id %>">
            <input type="submit" class="delbtn" value="SUPPRIMER DEFINITIVEMENT" id="delete-blog">
        </form>
</div>

<script>
    let tagInput = $("#tagInput");
    let tags = "<%= locals.gallery.tags %>";
    tags = tags.split(',')

    tagInput.tagsinput('add', "");
    for (i = 0; i < tags.length; i++)
        tagInput.tagsinput('add', tags[i]);
</script>
<script src="/scripts/gallery/galleryScripts.js"></script>
<script src="/scripts/frontValidation.js"></script>
</div>
  
<% include ../partials/footer %>