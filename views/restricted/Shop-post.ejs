<% include ../partials/head %>

<div class="container container-single"> 
    <div class="single-wrapper col-8 offset-2">
        <h1 class="single-title">Ajouter un item à la boutique</h1>
        <form class="col-8 offset-2" id="shop" method="POST" action="/api/shop/post" enctype="multipart/form-data" onsubmit="postShop(event);">
            <hr /> 
            <div class="form-group">
                <label class="control-label">Titre</label>
                <input class="form-control" type="text" name="title" id="title" placeholder="Titre" onkeyup="Validate.String(this, 1, 256);" required>
                <span id="i_title" class="form-info">Title must contain between 1 and 256 characters</span>
            </div>

            <div class="form-group">
                <label class="control-label">Description</label>
                <textarea class="instructions-textarea" id="content" name="content" placeholder="Description de l'item..." onkeyup="Validate.String(this, 1, 2048);" required></textarea>
                <span id="i_content" class="form-info">Content must contain between 1 and 2048 characters</span>  
            </div>

            <div class="form-group">
                <label class="control-label">Prix</label>
                <input placeholder="35.50 (au centième d'euro près)" class="form-control" type="number" min="1" id="price" name="price" step=".01" required>
            </div>
            
            <div class="form-group text-center">
                <label class="control-label">Cochez si l'exemplaire est unique</label><br />
                <input type="checkbox" name="isUnique" id="isUnique">
            </div>

