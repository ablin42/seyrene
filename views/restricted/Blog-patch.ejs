<% include ../partials/head %>

<div class="container-fluid">
    <div class="login-form blog-form col-6 offset-3">
        <form id="blog-form" method="POST" action="/api/blog/patch/<%= locals.blogContent.id %>"> <!-- /blogId -->
            <h1 class="form-title">Editer un post de blog</h1>
            <div class="txtb">
                <input type="text" name="title" value="<%= locals.blogContent.title %>" required>
                <span data-placeholder="Titre"></span>
            </div>
            <textarea id="blog-textarea" class="blog-textarea" name="content" placeholder="Your blog content here" required><%= locals.blogContent.content %></textarea>

            <input type="submit" class="logbtn" value="Modifier" id="patch-blog">
        </form>
    <hr />
    <form method="GET" action="/api/blog/delete/<%= locals.blogContent.id %>">
        <input type="submit" class="delbtn" value="SUPPRIMER" id="delete-blog">
    </form>
</div>
    <script src="/scripts/formFocus.js"></script>
</div>
  
<% include ../partials/footer %>