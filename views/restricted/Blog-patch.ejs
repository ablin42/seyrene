<% include ../partials/head %>

<div class="full-container" id="container-admin">
	<div class="container container-front">
		<div class="col-md-10 offset-md-1">
			<h1 class="square-title text-center">Modifier un blog</h1>
			<form id="blog" method="POST" action="/api/blog/patch/<%= locals.blog.id %>">
				<div class="form-group">
					<label class="control-label">Titre</label>
					<input type="text" name="title" id="title" placeholder="Titre" value="<%= locals.blog.title %>" data-vstring="1;256" required />
					<span id="i_title" class="form-info"><b>Title</b> must contain between <b>1 and 256 characters</b></span>
				</div>

				<div class="form-group">
					<div id="editor"></div>
					<input type="hidden" name="content" id="content" />
					<span id="i_content" class="form-info"><b>Content</b> must contain between <b>128 and 4096 characters</b></span>
				</div>

				<input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
				<input type="submit" class="submit-btn" value="Mettre Ã  jour" id="submit-blog" />
			</form>
			<form class="mt-3" method="POST" action="/api/blog/delete/<%= locals.blog.id %>">
				<input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
				<input type="submit" class="delbtn" value="SUPPRIMER DEFINITIVEMENT" id="delete-blog" />
			</form>
		</div>
	</div>
	<% include ../partials/footer %>
</div>

<input type="hidden" value="<%= locals.blog.content %>" id="blogContent" />
<% if (locals.formData) { %>
<input type="hidden" value="<%= locals.formData.content %>" id="blogFormData" />
<% } %>
<script src="/scripts/blog/patchquill.js" defer></script>
<script src="/scripts/core/frontValidation.js" defer></script>
