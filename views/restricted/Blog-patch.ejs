<% include ../partials/head %>

<div class="container container-single"> 
    <div class="single-wrapper col-8 offset-2">
        <h1 class="single-title">Modifier un ticket de blog</h1>
        <form class="col-8 offset-2" method="POST" action="/api/blog/patch/<%= locals.blogContent.id %>" enctype="multipart/form-data">
            <hr />
            <div class="form-group">
                <label class="control-label">Titre</label>
                <input class="form-control" type="text" name="title" id="title" placeholder="Titre" value="<%= locals.blogContent.title %>" onkeyup="Validate.String(this, 1, 256);" required>
                <span id="i_title" class="form-info">Title must contain between 1 and 256 characters</span>
            </div>

            <div class="form-group">
                <label class="control-label">Description</label>
                <textarea class="instructions-textarea" id="content" name="content" placeholder="Description de l'oeuvre.." onkeyup="Validate.String(this, 128, 4096);" required><%= locals.blogContent.content %></textarea>
                <span id="i_content" class="form-info">Content must contain between 128 and 4096 characters</span>  
            </div>

            <div class="form-group">
                <div class="form-group text-center">
                    <label for="img" id="imglabel" class="filebtn">Choisir des images</label>
                    <input class="inputfile" type="file" name="img" id="img" onchange="readURL(this)" multiple>
                </div>
                <% if (locals.img) { %>
                    <% locals.img.forEach(function (item) { %>
                        <img class="w-100 m-1" id="<%= item._id %>" src="http://localhost:8089/api/image/<%= item._id %>">
                        <div id="actDiv<%= item._id %>" class="action-div" <% if (item.isMain === true) { %>style="display:none"<% } %>>
                            <a id="del<%= item._id %>" onclick="deleteImage(event, this);" href="http://localhost:8089/api/image/delete/<%= item._id %>"><i class="fas fa-trash-alt"></i></a>
                            <a id="sel<%= item._id %>" class="select-main" onclick="setMain(event, this);" href="http://localhost:8089/api/image/select/Blog/<%= locals.blogContent.id %>/<%= item._id %>" <% if (item.isMain === true) { %>style="display:none"<% } %>><i class="fas fa-star"></i></a>
                        </div>
                    <% }) %>
                <% } %>
            </div>

            <input type="submit" class="logbtn" value="Mettre Ã  jour" id="submit-blog">
        </form>
        <form class="col-8 offset-2 mt-4" method="GET" action="/api/blog/delete/<%= locals.blogContent.id %>">
            <input type="submit" class="delbtn" value="SUPPRIMER DEFINITIVEMENT" id="delete-blog">
        </form>
    </div>
<script src="/scripts/blog/blogScripts.js"></script>
<script src="/scripts/frontValidation.js"></script>
</div>
  
<% include ../partials/footer %>