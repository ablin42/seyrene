<% include ../partials/head %>

<div class="full-container" id="container-admin">
	<div class="container container-front">
		<div class="col-md-10 offset-md-1">
			<h1 class="square-title text-center">Nouveau blog</h1>
			<form id="blog" method="POST" action="/api/blog/">
				<div class="form-group">
					<label class="control-label">Titre</label>
					<input id="title" type="text" placeholder="Titre" name="title" data-vstring="1;256" value="<% if (locals.formData) { %><%= locals.formData.title %><% } %>" required />
					<span id="i_title" class="form-info">Title must contain between 4 and 256 characters</span>
				</div>

				<div class="form-group">
					<div id="editor"></div>
					<input type="hidden" name="content" id="content" />
					<span id="i_content" class="form-info">Content must contain between 128 and 4096 characters</span>
				</div>

				<input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
				<input type="submit" class="submit-btn" value="Valider" id="submit-blog" />
			</form>
		</div>
	</div>
</div>

<% if (locals.formData) { %>
<input type="hidden" value="<%= locals.formData.content %>" id="blogFormData" />
<% } %>
<script src="/scripts/blog/postquill.js" defer></script>
<script src="/scripts/core/frontValidation.js" defer></script>
<% include ../partials/footer %>
