<% include partials/head %>

<script src="/scripts/blog/infiniteBlogs.js"></script>
<div class="container container-blog" id="container-blog">
  <% if(locals.blogs){ %>
    <% Object.keys(locals.blogs).forEach(function (index) { %>
      <div class="row blog-row" id="<%= locals.blogs[index]._id %>">
        <div class="col-8 offset-2">
          <h3 class="blog-title"><a href="/Blog/<%= locals.blogs[index]._id %>"><%= locals.blogs[index].title %></a></h3> 
          <% if (locals.blogs[index].mainImgId) { %>
            <img src="/api/image/<%= locals.blogs[index].mainImgId %>">
          <% } %>
          <p class="blog-info">post√© par 
            <b class="blog-author"><%= locals.blogs[index].author %></b>, <i class="blog-date"><%= locals.blogs[index].date %></i>
          </p>
          <p class="blog-content"><%= locals.blogs[index].content %></p>
        </div>
      </div>
      <hr />
    <% }) %>
  <% } %>
</div>
<div class="col-6 offset-3 mb-3 mt-3">
  <img id="loader" src="/img/loader.gif" style="width: 50px; height: 50px; margin: 5px auto 5px auto; display: none">
  <input type="submit" class="logbtn" value="Load more" onclick="infiniteBlogs();">
</div>
  
<% include partials/footer %>