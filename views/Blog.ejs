<% include partials/head %>

<div class="container-fluid"> 
  <div class="container container-blog">
    <% if(locals.blogs){ %>
      <% Object.keys(locals.blogs).forEach(function (index) { %>
          <div class="row">
            <div class="col-8 offset-2">
              <h3 class="blog-title"><%= locals.blogs[index].title %></h3>
              <p class="blog-info">post√© par <b class="blog-author"><%= locals.blogs[index].author %></b>, <i class="blog-date"><%= locals.blogs[index].date %></i></p>
              <p class="blog-content"><%= locals.blogs[index].content %></p>
            </div>
          </div>
          <hr />
      <% }) %>
    <% } %>
  </div>
</div>
  
<% include partials/footer %>